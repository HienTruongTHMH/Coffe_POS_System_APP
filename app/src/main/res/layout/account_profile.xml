<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header with Back Button and Title -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back button" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="20sp"
            android:textColor="#333"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@+id/bottomNavigation"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Avatar and Basic Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <!-- Avatar Container with Edit Button -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_profile_avatar"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_bg"
                        android:clickable="true"
                        android:focusable="true"/>

                    <!-- Edit Avatar Button -->
                    <ImageView
                        android:id="@+id/btnEditAvatar"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_camera"
                        android:background="@drawable/circle_bg_accent"
                        android:layout_alignBottom="@id/imgAvatar"
                        android:layout_alignRight="@id/imgAvatar"
                        android:layout_marginRight="-8dp"
                        android:layout_marginBottom="-8dp"
                        android:padding="6dp"
                        android:contentDescription="Edit avatar"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phan Nhat Viet"
                    android:textSize="18sp"
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0795625822"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhatviet29@gmail.com"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Employee Info List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"
                android:padding="16dp">

                <!-- Employee Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên nhân viên"
                    android:textSize="14sp"
                    android:textColor="#666"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="#F5F5F5"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvEmployeeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phan Nhat Viet"
                        android:textSize="16sp"
                        android:textColor="#333"/>
                </LinearLayout>

                <!-- Phone Number -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Điện Thoại"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="#F5F5F5"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvEmployeePhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0795625822"
                        android:textSize="16sp"
                        android:textColor="#333"/>

                    <ImageButton
                        android:id="@+id/btnEditPhone"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_edit"
                        android:padding="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Edit phone"/>
                </LinearLayout>

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="#F5F5F5"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvEmployeeEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nhatviet29@gmail.com"
                        android:textSize="16sp"
                        android:textColor="#333"/>

                    <ImageButton
                        android:id="@+id/btnEditEmail"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_edit"
                        android:padding="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Edit email"/>
                </LinearLayout>

                <!-- Shop Address -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ Shop"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="#F5F5F5"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvShopAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 Le Duan"
                        android:textSize="16sp"
                        android:textColor="#333"/>
                </LinearLayout>

                <!-- Monthly Revenue -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doanh thu tháng"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="#F5F5F5"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvMonthlyRevenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.000.000"
                        android:textSize="16sp"
                        android:textColor="#333"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:weightSum="2"
                android:paddingTop="8dp"
                android:paddingBottom="16dp">

                <!-- Logout Button -->
                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Log out"
                    android:textColor="#333"
                    android:background="@drawable/button_border"
                    android:layout_marginEnd="8dp"/>

                <!-- Change Account Button -->
                <Button
                    android:id="@+id/btnChangeAccount"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:text="Change account"
                    android:textColor="#333" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:layout_alignParentBottom="true">

        <!-- Order -->
        <LinearLayout
            android:id="@+id/navOrder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_order"
                app:tint="#999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order"
                android:textSize="12sp"
                android:textColor="#999"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- List -->
        <LinearLayout
            android:id="@+id/navList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_list"
                app:tint="#999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List"
                android:textSize="12sp"
                android:textColor="#999"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Package -->
        <LinearLayout
            android:id="@+id/navPackage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_package"
                app:tint="#999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Package"
                android:textSize="12sp"
                android:textColor="#999"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Cart -->
        <LinearLayout
            android:id="@+id/navCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cart"
                app:tint="#999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textSize="12sp"
                android:textColor="#999"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- profile -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                app:tint="#D2691E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#D2691E"
                android:layout_marginTop="4dp" />

            <View
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:background="#D2691E"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>