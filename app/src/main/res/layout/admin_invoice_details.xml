<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">




    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:fillViewport="true">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">


                <!-- Back Button -->
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back"
                    android:contentDescription="Back button" />


                <!-- Empty View to center the title -->
                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#MBO1"
                    android:textSize="20sp"
                    android:textColor="#b8860b"
                    android:textStyle="bold" />


                <!-- Empty View to balance the layout -->
                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1" />
            </LinearLayout>




            <!-- Bill Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"
                android:padding="16dp">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin hoá đơn"
                    android:textSize="20sp"
                    android:textColor="#191970"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>


                <!-- Products Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sản phẩm"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:textStyle="bold" />




                    <!-- Product 1 with quantity controls - Modified layout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical">




                        <!-- Product name moved to left -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Expresso 20000"
                            android:textSize="14sp"
                            android:textColor="#666"/>




                        <!-- Quantity controls moved to right -->
                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="-"
                            android:textSize="10sp"
                            android:background="@drawable/ic_minus"/>




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="14sp"
                            android:textColor="#666"
                            android:layout_marginHorizontal="10dp"/>




                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="+"
                            android:textSize="10sp"
                            android:background="@drawable/ic_plus"/>
                    </LinearLayout>




                    <!-- Product 2 with quantity controls - Modified layout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical">




                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Expresso 20000"
                            android:textSize="14sp"
                            android:textColor="#666"/>




                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="-"
                            android:textSize="10sp"
                            android:background="@drawable/ic_minus"/>




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="14sp"
                            android:textColor="#666"
                            android:layout_marginHorizontal="8dp"/>




                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="+"
                            android:textSize="10sp"
                            android:background="@drawable/ic_plus"/>
                    </LinearLayout>




                    <!-- Product 3 with quantity controls - Modified layout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical">




                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Expresso 20000"
                            android:textSize="14sp"
                            android:textColor="#666"/>




                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="-"
                            android:textSize="10sp"
                            android:background="@drawable/ic_minus"/>




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="14sp"
                            android:textColor="#666"
                            android:layout_marginHorizontal="8dp"/>




                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="+"
                            android:textSize="10sp"
                            android:background="@drawable/ic_plus"/>
                    </LinearLayout>
                </LinearLayout>
                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp"/>




                <!-- Delivery Date Section with input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày giao"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:textStyle="bold" />




                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="03/06/2025"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/transparent"
                        android:padding="8dp"/>




                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="03:30:52"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_marginTop="4dp"
                        android:background="@android:color/transparent"
                        android:padding="8dp"/>
                </LinearLayout>




                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp"/>




                <!-- Tax Section with input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thuế"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:textStyle="bold" />




                    <EditText
                        android:id="@+id/editTextTax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Đã bao gồm thuế"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:inputType="text"/>




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chính sách giá"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp" />




                    <EditText
                        android:id="@+id/editTextPricingPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nhập giá"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edittext_border"
                        android:padding="8dp"/>




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ghi chú"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp" />




                    <EditText
                        android:id="@+id/editTextNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nhập ghi chú"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edittext_border"
                        android:padding="8dp"
                        android:inputType="textMultiLine"/>
                </LinearLayout>




                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp"/>




                <!-- Bill Section with bold style and plus icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#F0F8FF"
                    android:padding="16dp"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="HÓA ĐƠN"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:textStyle="bold" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_plus"
                        android:layout_marginStart="8dp"
                        android:tint="#2196F3"/>
                </LinearLayout>




                <!-- Phần Hóa đơn -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginTop="16dp">




                    <!-- Dòng 1: HÓA ĐƠN 1 và icon + -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HÓA ĐƠN 1"
                            android:textSize="16sp"
                            android:textColor="#333"
                            android:textStyle="bold" />






                    </LinearLayout>




                    <!-- Dòng 2: Thanh toán một phần (đảm bảo xuống dòng) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanh toán một phần 450.000/500.000"
                        android:textSize="14sp"
                        android:textColor="#2196F3"
                        android:layout_marginTop="8dp"/> <!-- Khoảng cách với dòng trên -->
                </LinearLayout>




                <!-- Payment Button -->
                <Button
                    android:id="@+id/paymentButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="THANH TOÁN"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/circle_bg"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




    <!-- Fixed Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:layout_alignParentBottom="true">




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">




            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_order"
                app:tint="#999999" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="4dp" />


        </LinearLayout>




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">




            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_list"
                app:tint="#999" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List"
                android:textSize="12sp"
                android:textColor="#999"
                android:layout_marginTop="4dp" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">




            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_package"
                app:tint="#D2691E" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Package"
                android:textSize="12sp"
                android:textColor="#D2691E"
                android:layout_marginTop="4dp" />
            <View
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:background="#D2691E"
                android:layout_marginTop="4dp" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">




            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cart"
                app:tint="#999" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textSize="12sp"
                android:textColor="#999"
                android:layout_marginTop="4dp" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">




            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                app:tint="#999" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#999"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
